@page "/stocks"
@using Microsoft.EntityFrameworkCore
@using MyStockApp.Data
@using MyStockApp.Data.Models
@inject IDbContextFactory<AppDbContext> DbFactory
@rendermode InteractiveServer

<PageTitle>股票追蹤清單</PageTitle>

<h3>股票追蹤清單</h3>

@if (isLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">載入中...</span>
        </div>
        <p class="mt-2">載入中...</p>
    </div>
}
else
{
    @if (!stocks.Any())
    {
        <div class="alert alert-info" role="alert">
            目前無追蹤股票
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>股票代號</th>
                        <th>股票名稱</th>
                        <th>備註</th>
                        <th>建立時間</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stock in stocks)
                    {
                        <tr>
                            <td>@stock.StockSymbol</td>
                            <td>@stock.StockName</td>
                            <td>@(stock.Notes ?? "-")</td>
                            <td>@stock.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</td>
                            <td>
                                <button class="btn btn-sm btn-primary me-1" disabled>編輯</button>
                                <button class="btn btn-sm btn-danger" disabled>刪除</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
    </div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="@(() => successMessage = null)"></button>
    </div>
}

@code {
    private List<StockWatchlist> stocks = new();
    private StockWatchlist currentStock = new();
    private bool isEditing = false;
    private bool showDeleteModal = false;
    private StockWatchlist? stockToDelete = null;
    private string? errorMessage = null;
    private string? successMessage = null;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadStocksAsync();
    }

    private async Task LoadStocksAsync()
    {
        try
        {
            isLoading = true;
            using var context = await DbFactory.CreateDbContextAsync();
            stocks = await context.StockWatchlists
                .OrderByDescending(s => s.CreatedAt)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"載入股票清單失敗：{ex.Message}";
            Console.Error.WriteLine($"LoadStocksAsync Error: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }
}
